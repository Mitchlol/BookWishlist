<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="com.mitchlustig.bookwishlist.Router" />
        <variable name="book" type="com.mitchlustig.bookwishlist.service.Model.Book"/>
    </data>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:text="@{book.getTitle()}"
        android:textSize="20sp"
        android:paddingLeft="80sp"
        android:paddingRight="80sp"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:onClick="@{(view) -> Router.book(view.getContext(), book.getId())}"/>
</layout>